// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SECURITY_OFFICER
  ADMINISTRATIVE_STAFF
  STUDENT
}

enum VehicleType {
  CAR
  MOTORCYCLE
}

enum SpaceType {
  CAR
  MOTORCYCLE
  HANDICAP
}

enum AttemptType {
  ENTRY
  EXIT
}

model User {
  id                   Int             @id @default(autoincrement())
  email                String          @unique
  password             String
  passwordHistory      String          @default("")
  name                 String
  dateOfBirth          DateTime
  identificationNumber String          @unique
  role                 Role
  isFirstLogin         Boolean         @default(true)
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  vehicles             Vehicle[]
  accessAttempts       AccessAttempt[]
}

model Vehicle {
  id                    Int             @id @default(autoincrement())
  licensePlate          String          @unique
  brand                 String
  color                 String
  type                  VehicleType
  requiresHandicapSpace Boolean         @default(false)
  hasEnteredOnce        Boolean         @default(false)
  ownerId               Int?
  owner                 User?           @relation(fields: [ownerId], references: [id])
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt
  parkingRecords        ParkingRecord[]
  accessAttempts        AccessAttempt[]

  @@index([licensePlate])
}

model Parking {
  id             Int             @id @default(autoincrement())
  name           String          @unique
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  parkingSpaces  ParkingSpace[]
  accessAttempts AccessAttempt[]
}

model ParkingSpace {
  id              Int             @id @default(autoincrement())
  spaceNumber     String
  spaceType       SpaceType       @default(CAR)
  parkingId       Int
  parking         Parking         @relation(fields: [parkingId], references: [id])
  isOccupied      Boolean         @default(false)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  parkingRecords  ParkingRecord[]

  @@unique([parkingId, spaceNumber])
  @@index([parkingId])
  @@index([spaceType, isOccupied])
}

model ParkingRecord {
  id              Int           @id @default(autoincrement())
  vehicleId       Int
  vehicle         Vehicle       @relation(fields: [vehicleId], references: [id])
  parkingSpaceId  Int
  parkingSpace    ParkingSpace  @relation(fields: [parkingSpaceId], references: [id])
  entryTime       DateTime      @default(now())
  exitTime        DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model AccessAttempt {
  id                Int          @id @default(autoincrement())
  licensePlate      String
  vehicleId         Int?
  vehicle           Vehicle?     @relation(fields: [vehicleId], references: [id])
  parkingId         Int?
  parking           Parking?     @relation(fields: [parkingId], references: [id])
  attemptTime       DateTime     @default(now())
  attemptType       AttemptType
  success           Boolean
  failureReason     String?
  securityOfficerId Int?
  securityOfficer   User?        @relation(fields: [securityOfficerId], references: [id])
  createdAt         DateTime     @default(now())

  @@index([licensePlate])
  @@index([vehicleId])
  @@index([parkingId])
  @@index([attemptTime])
  @@index([success])
}
